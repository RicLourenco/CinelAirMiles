@model CinelAirMiles.Common.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Forced Password Change";
    Layout = "_Layout_login";
}

<div class="sufee-login d-flex align-content-center flex-wrap">
    <div class="container">
        <div class="login-content">
            <div class="login-logo">
                <a href="index.html">
                    <img class="align-content" src="~/backoffice/images/CAMlogo.png" alt="">
                </a>
            </div>
            <div class="login-form">
                <p>Your account has been flagged for a password change.</p>
                <p>You will not be able to login until you complete this change.</p>
                <form method="post">
                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="UserName" />

                    <div class="form-group">
                        <label asp-for="Password">New password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your new password..." />
                        <span asp-validation-for="Password" class="text-info"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirm</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password..." />
                        <span asp-validation-for="ConfirmPassword" class="text-info"></span>
                    </div>
                    @ViewBag.Message
                    <div asp-validation-summary="All" class="text-info" style="margin-left:20px"></div>
                    <div class="checkbox" style="margin-left:20px">
                        <label class="pull-right">
                        </label>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Change password" class="btn btn-warning btn-flat m-b-30 m-t-30" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}