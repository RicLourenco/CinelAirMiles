@model CinelAirMiles.Common.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout_login";
}

        <div class="sufee-login d-flex align-content-center flex-wrap">
            <div class="container">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="index.html">
                            <img class="align-content" src="~/backoffice/images/flyt_preview_rev_1.png" alt="" style="width:250px;">
                        </a>
                    </div>
                    <div class="login-form">
                        <form method="post">

                            <div class="form-group">
                                <label asp-for="Username">Email</label>
                                <input asp-for="Username" class="form-control" type="email" placeholder="Email" />
                                <span asp-validation-for="Username" class="text-info"></span>
                            </div>
                            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-info"></span>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-info" style="margin-left:20px"></div>
                            <div class="checkbox" style="margin-left:20px">
                                <label>
                                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                                    <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
                                    <span asp-validation-for="RememberMe" class="text-warning"></span>
                                </label>
                                <label class="pull-right">
                                    @*<a href="#">Forgotten Password?</a>*@
                                </label>
                            </div>

                            <button type="submit" class="btn btn-warning btn-flat m-b-30 m-t-30" value="Login">Login</button>


                        </form>
                    </div>
                </div>
            </div>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
