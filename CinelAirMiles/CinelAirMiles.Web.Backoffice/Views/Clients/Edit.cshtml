@model CinelAirMiles.Web.Backoffice.Models.EditClientViewModel

@{
    ViewData["Title"] = "Edit Client";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ClientId)
            @*<input asp-for="Id" />
            <input asp-for="ClientId" />*@
            <h4>Client Information</h4>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-warning"></span>
            </div>

            <h4>Program Information</h4>
            <div class="form-group">
                <label asp-for="FlownSegments">Flown Segments</label>
                <input asp-for="FlownSegments" class="form-control" type="number" />
                <span asp-validation-for="FlownSegments" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="MembershipDate">Membership Date</label>
                <input asp-for="MembershipDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="MembershipDate" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgramTierId" class="control-label">Program Tier</label>
                <select asp-for="ProgramTierId" asp-items="Model.ProgramTiers" class="form-control"></select>
                <span asp-validation-for="ProgramTierId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
