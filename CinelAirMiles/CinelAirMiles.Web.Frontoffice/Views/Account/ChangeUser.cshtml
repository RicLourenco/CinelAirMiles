@model CinelAirMiles.Common.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutMyAccount";
}

<!--? My Account Area Start-->
<section class="blog_area section-padding" style="margin-top:-100px;">
    <h1>My Account Area</h1>
    <div class="container">
        <h4>Edit Profile</h4>

        <!-- login Area Start -->
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="team-info"></div>
                        <div class="login-form">
                            <!-- Login Heading -->
                            <div class="login-heading">
                            </div>
                            <!-- Single Input Fields -->

                            <div class="input-box">
                                <div class="single-input-fields">
                                    <label asp-for="FirstName">First name</label>
                                    <input asp-for="FirstName" type="text" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-warning"></span>
                                </div>

                                <div class="single-input-fields">
                                    <label asp-for="LastName">Last name</label>
                                    <input asp-for="LastName" type="text" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-warning"></span>
                                </div>

                                <div class="single-input-fields">
                                    <label asp-for="PhoneNumber">Phone number</label>
                                    <input asp-for="PhoneNumber" type="number" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="text-success">
                                <p style="color:green;">
                                    @ViewBag.Message
                                </p>
                            </div>
                            <div class="login-footer">
                                <br />
                                <input type="submit" value="Change user" class="submit-btn3" />
                            </div>
                            <!-- form Footer -->
                            <div class="login-footer" style="padding-top:10px">
                                <p>Change  <a asp-action="ChangePassword" style="color:darkblue;">password</a></p>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>

    </div>
</section>
<!-- My Account Area End -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}