@model CinelAirMiles.Common.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutClean";
}

<main style="margin-top:50px; margin-bottom:25px;">

    <!-- login Area Start -->
    <div class="login-form-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="login-form">
                            <!-- Login Heading -->
                            <div class="login-heading">
                                <span>Change User</span>
                            </div>
                            <!-- Single Input Fields -->

                            <div class="input-box">
                                <div class="single-input-fields">
                                    <label asp-for="FirstName">First name</label>
                                    <input asp-for="FirstName" type="text" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-warning"></span>

                                </div>
                                <div class="single-input-fields">
                                    <label asp-for="LastName">Last name</label>
                                    <input asp-for="LastName" type="text" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-warning"></span>

                                </div>

                                <div class="single-input-fields">
                                    <label asp-for="PhoneNumber">Phone number</label>
                                    <input asp-for="PhoneNumber" type="number" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-warning"></span>

                                </div>
                            </div>
                            <div class="login-footer">
                                <input type="submit" value="Change user" class="submit-btn3" />
                            </div>
                            <!-- form Footer -->
                            <div class="login-footer" style="padding-top:10px">
                                <p>Change  <a asp-action="ChangePassword">password</a></p>
                            </div>
                            <div class="login-footer" style="padding-top:10px">
                                <p>Back to <a asp-action="MyAccount">my account</a></p>
                            </div>
                        </div>

                    </form>
                    <div class="text-success">
                        <p>
                            @ViewBag.Message
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- login Area End -->
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}