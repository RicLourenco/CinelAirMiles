@model CinelAirMiles.Common.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_LayoutClean";
}

<main style="margin-top:50px; margin-bottom:25px;">

    <!-- login Area Start -->
    <div class="login-form-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="login-form">
                            <!-- Login Heading -->
                            <div class="login-heading">
                                <span>Reset Your Password</span>
                            </div>
                            <!-- Single Input Fields -->

                            <div class="input-box">
                                <div class="single-input-fields">
                                    <label asp-for="UserName">Email</label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-warning"></span>
                                </div>

                                <div class="single-input-fields">
                                    <label asp-for="Password">New password</label>
                                    <input asp-for="Password" type="password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-warning"></span>
                                </div>

                                <div class="single-input-fields">
                                    <label asp-for="ConfirmPassword">Confirm</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="login-footer">
                                <input type="submit" value="Reset password" class="submit-btn3" />
                            </div>
                        </div>
                    </form>
                    <div class="text-success">
                        <p>
                            @ViewBag.Message
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- login Area End -->
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}