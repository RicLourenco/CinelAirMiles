@model List<CinelAirMiles.Common.Models.MilesViewModel>

@{
    Layout = "_LayoutMyAccount";
}

<!--? My Account Area Start-->
<section class="blog_area section-padding">
    <h1>Miles Balance</h1>
    <div class="container">
        <br />
        <br />
        <br />
        <div class="row">
            <div class="col-lg-12 mb-8 mb-lg-0">
                <div class="blog_left_sidebar">
                    <article class="blog_item" style="background-color:silver; border-radius:10px;">
                        <div class="blog_details">
                            <a href="blog_details.html">
                                <h2 class="blog-head" style="color: #2d2d2d;"><i class="fa fa-binoculars"></i> Book your trip</h2>

                            </a>
                        </div>
                    </article>

                    <h3> Total Available Status Miles: @ViewData["StatusBalance"]</h3>

                    <h3> Total Available Bonus Miles: @ViewData["BonusBalance"]</h3>
                    <br />
                    <ejs-grid id="milesGrid" allowSorting="true" allowPaging="true" allowGrouping="true" allowSelection="false" dataSource="Model">
                    </ejs-grid>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- My Account Area End -->