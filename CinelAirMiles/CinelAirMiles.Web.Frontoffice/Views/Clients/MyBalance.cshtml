@model List<CinelAirMiles.Common.Models.MilesViewModel>

@{
    Layout = "_LayoutMyAccount";
}

<!--? My Account Area Start-->
<section class="blog_area section-padding" style="margin-top:-100px;">
    <h1>Miles Balance</h1>
    <div class="container">
        <br />
        <br />
        <div class="row">
            <div class="col-lg-12 mb-8 mb-lg-0">
                <div class="blog_left_sidebar">
                    <article class="blog_item" style="        background-color: #E1F5FE;
        border-radius: 10px;">
                        <div class="blog_details">

                                <h3 class="blog-head"style="color: #2d2d2d;"><i class="fa fa-globe"></i> Total Available Status Miles: @ViewData["StatusBalance"]</h3>

                                <h3 class="blog-head" style="color: #2d2d2d;"><i class="fa fa-suitcase"></i> Total Available Bonus Miles: @ViewData["BonusBalance"]</h3>
                
                        </div>
                    </article>

                    
                    <br />
                    <ejs-grid id="milesGrid" allowSorting="true" allowPaging="true" allowGrouping="true" allowSelection="false" dataSource="Model">
                    </ejs-grid>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- My Account Area End -->